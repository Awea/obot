#!/usr/bin/env ruby

require 'thor'

require_relative '../lib/obot'

class ObotCLI < Thor

  option :config_file
  option :env
  desc 'default_loop', 'run the default_loop'
  def default_loop
    obot = Obot.new(
      options[:config_file] ? options[:config_file] : 'config/config.yml',
      options[:env]         ? options[:env] : 'development'
    )
    Loop.new(obot).run_default
  end
end

ObotCLI.start(ARGV)
